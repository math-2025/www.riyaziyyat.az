rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to all collections for development
    match /{document=**} {
      allow read, write: if true;
    }

    // More specific rules below (currently commented out)
    // In production, you should restrict access as much as possible.

    match /exams/{examId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Teachers only in production
    }

    match /students/{studentId} {
      allow read, write: if request.auth != null; // Teachers only for write in prod
    }
    
    match /studentGroups/{groupId} {
      allow read, write: if request.auth != null; // Teachers only for write in prod
    }

    match /submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Students should only create their own
      allow update: if request.auth != null; // Teachers or cloud functions for scoring
    }
    
    match /appeals/{appealId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.studentId;
      allow update: if request.auth != null; // Teachers only in prod
    }
  }
}
